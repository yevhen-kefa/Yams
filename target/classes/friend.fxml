<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="yams.controleur.FriendController"
>
   <children>
      <ImageView fitHeight="1080" fitWidth="1920" preserveRatio="false">
         <image>
            <Image url="@img/bg.png" />
         </image>
      </ImageView>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="99.0" prefWidth="546.0" spacing="50.0" style="-fx-background-color: #737373; -fx-border-color: #000; -fx-border-width: 10;" BorderPane.alignment="CENTER">
               <children>
                  <Label contentDisplay="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="233.0" prefWidth="554.0" text="Friends" textFill="WHITE">
                     <font>
                        <Font name="Noto Serif Ethiopic Regular" size="130.0" />
                     </font>
                  </Label>
                  <Label maxWidth="-Infinity" minWidth="-Infinity" prefHeight="90.0" prefWidth="674.0" text="NUMBER OF FRIENDS :" textFill="WHITE">
                     <font>
                        <Font name="Noto Serif Ethiopic Regular" size="58.0" />
                     </font>
                  </Label>
                  <TextField fx:id="inputFriends" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#inputFriends" prefHeight="50.0" prefWidth="615.0" promptText="Enter the number: ">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </TextField>
                  <Label text="NUMBER OF BOTS :" textFill="WHITE">
                     <font>
                        <Font name="Noto Serif Ethiopic Regular" size="58.0" />
                     </font>
                  </Label>
                  <TextField fx:id="inputBots" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#inputBots" prefHeight="50.0" prefWidth="615.0" promptText="Enter the number: ">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </TextField>
                  <Button fx:id="btnPlay" maxWidth="-Infinity" mnemonicParsing="false" onAction="#Play" prefWidth="483.0" style="-fx-background-color: #6BB449;" text="Play" textFill="WHITE">
                     <font>
                        <Font size="50.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </padding>
            </VBox>
         </center>
         <top>
            <Button fx:id="btnReturn" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#Return" prefHeight="100.0" prefWidth="300.0" style="-fx-background-color: #932525; -fx-background-radius: 20;" text="Return" textFill="#fdfdfd" BorderPane.alignment="CENTER_LEFT">
               <font>
                  <Font size="40.0" />
               </font>
               <BorderPane.margin>
                  <Insets left="10.0" top="10.0" />
               </BorderPane.margin>
            </Button>
         </top>
      </BorderPane>
   </children>
</StackPane>
