                    <font>
                        <Font size="40.0" />
                    </font>
                    <BorderPane.margin>
                        <Insets left="10.0" top="10.0" />
                    </BorderPane.margin>
                </Button>
            </top>
        </BorderPane>
    </children>
</StackPane>
