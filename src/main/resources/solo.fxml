<StackPane prefHeight="1023.0" prefWidth="1895.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="yams.controleur.SoloController"
>
    <children>
        <ImageView fitHeight="1080" fitWidth="1920" preserveRatio="false">
            <image>
                <Image url="@img/bg.png" />
            </image>
        </ImageView>
        <BorderPane prefHeight="200.0" prefWidth="200.0">
            <center>
                <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="99.0" prefWidth="546.0" spacing="50.0" style="-fx-background-color: #737373; -fx-border-color: #000; -fx-border-width: 10;" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="Solo" textFill="WHITE">
                            <font>
                                <Font size="130.0" />
                            </font>
                        </Label>
                        <Label text="NUMBER OF BOTS :" textFill="WHITE">
                            <font>
                                <Font name="Noto Serif Ethiopic Regular" size="58.0" />
                            </font>
                        </Label>
                        <TextField fx:id="inputBots" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="615.0" promptText="Enter the number: ">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </TextField>
                        <Button fx:id="btnPlay" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#Play" prefHeight="152.0" prefWidth="483.0" style="-fx-background-color: #6BB449;" text="Play" textFill="WHITE">
                            <font>
                                <Font size="50.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
                    </padding>
                </VBox>
            </center>
            <top>
